<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkbox_optout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:checked="true"
        android:text="Analytics Opt-out" />


    <Button
        android:id="@+id/button_eventSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Event" />

    <Button
        android:id="@+id/button_eventKit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Per Kit" />

    <Button
        android:id="@+id/button_eventParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event With Parameters" />




</LinearLayout>